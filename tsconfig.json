{
	"compilerOptions": {
		/* Basic Options */
		"lib": ["DOM", "ES2020"],
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",

		/* Emit Options */
		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,
		"resolveJsonModule": true,

		/* type checking */
		"strict": true,
		// TODO: Enable when all code is refactored
		//"noUnusedLocals": true,
		//"noUnusedParameters": true,
		"skipLibCheck": true,
		"isolatedModules": true,

		/* Experimental Features */
		"useDefineForClassFields": true
	},
	"include": ["lib"],
	"exclude": ["node_modules", "pkg"]
}
