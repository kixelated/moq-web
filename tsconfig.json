{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
  },
  "include": [
    "lib/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "demo"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
